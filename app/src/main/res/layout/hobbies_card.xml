<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/hobbyCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_hobby_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/hobbyThumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/menu_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/hobbyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hobbyThumbnail"
                android:paddingLeft="@dimen/hobby_title_padding"
                android:paddingRight="@dimen/hobby_title_padding"
                android:paddingTop="@dimen/hobby_title_padding"
                android:textAllCaps="false"
                android:textColor="@color/colorPureBlack"
                android:textSize="@dimen/hobby_title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/participant_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hobbyTitle"
                android:paddingBottom="@dimen/participant_count_padding_bottom"
                android:paddingLeft="@dimen/hobby_title_padding"
                android:paddingRight="@dimen/hobby_title_padding"
                android:textSize="@dimen/participant_count"/>

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="@dimen/ic_hobby_overflow_width"
                android:layout_height="@dimen/ic_hobby_overflow_height"
                android:layout_alignParentRight="true"
                android:layout_below="@id/hobbyThumbnail"
                android:layout_marginTop="@dimen/ic_hobby_overflow_margin_top"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_dots"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>