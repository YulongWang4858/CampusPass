<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.wangyulong.campuspass.Activity.MyRequestActivity">

        <TextView
            android:id="@+id/myRequestPageWelcomeMsg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorLightPink"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="Manage Your Requests!"
            android:textAllCaps="false"
            android:textColor="@color/colorPureWhite"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <ScrollView
            android:id="@+id/myRequestScrollView"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_below="@+id/myRequestPageWelcomeMsg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">
                </ListView>
            </RelativeLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/myRequestScrollView"
            android:layout_marginTop="100dp">

            <include layout="@layout/short_action_bar"/>
        </RelativeLayout>

    </RelativeLayout>
</layout>
