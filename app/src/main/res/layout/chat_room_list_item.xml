<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chatMsgUserTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/ChatMsgCircularImgHost"
            android:textAllCaps="false"
            android:textColor="@color/colorPureBlack"
            android:textSize="10dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/chatMsgTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/chatMsgUserTxt"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/chatMsgUserTxt"
            android:textAllCaps="false"
            android:textSize="10dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ChatMsgCircularImgHost"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/chatMsgUserTxt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/colorPureWhite"
            app:civ_border_width="3dp"/>

        <RelativeLayout
            android:id="@+id/chatMsgTxtSectionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ChatMsgCircularImgHost"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/ChatMsgCircularImgHost">

            <TextView
                android:id="@+id/chatMsgContentTxt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"/>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>