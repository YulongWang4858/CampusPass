<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="DoneButtonClickListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>

        <variable
            name="RegisterVM"
            type="com.example.wangyulong.campuspass.ViewModel.RegisterViewModel"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/emailtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:text="Email:"
                    android:textColor="@android:color/background_dark"/>


                <TextView
                    android:id="@+id/passwordTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="120dp"
                    android:text="Password:"
                    android:textColor="@android:color/background_dark"/>


                <EditText
                    android:id="@+id/emailETxt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="40dp"
                    android:text="@={RegisterVM.user_email}"/>

                <EditText
                    android:id="@+id/passwordETxt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="100dp"
                    android:text="@={RegisterVM.user_password}"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="480dp"
                    android:onClick="@{(v) -> DoneButtonClickListener.onClick()}"
                    android:text="Done"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>