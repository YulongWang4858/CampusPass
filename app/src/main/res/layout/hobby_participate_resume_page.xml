<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View"></import>

        <variable
            name="HobbyResumeVM"
            type="com.example.wangyulong.campuspass.ViewModel.HobbyResumeViewModel"/>

        <variable
            name="HobbyResumeSelectPhotoButtonClickedListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>

        <variable
            name="HobbyResumeUploadPhotoButtonClickedListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>

        <variable
            name="HobbyResumeDoneButtonClickedListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>

        <variable
            name="HobbyResumeCancelButtonClickedListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>

        <variable
            name="HobbyResumeDeleteButtonClickedListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:context="com.example.wangyulong.campuspass.Activity.HobbyParticipateActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/hobbyResumeFills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hobbyParticipateTitleETxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/text_input_border"
                        android:text="@{HobbyResumeVM.resume_title}"
                        android:textAllCaps="false"
                        android:textColor="@color/logoPurple"
                        android:textSize="30dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/hobbyParticipateDescrETxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/hobbyParticipateTitleETxt"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:hint="Description"
                        android:text="@={HobbyResumeVM.resume_descr}"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPureBlack"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/hobbyParticipatePriceETxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hobbyParticipateDescrETxt"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="80dp"
                        android:hint="Price"
                        android:text="@={HobbyResumeVM.resume_price}"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPureBlack"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/HobbyResumeUploadImg"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/hobbyParticipatePriceETxt"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/hobbyResumeButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hobbyResumeFills"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/hobbyResumeSelectButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:onClick="@{(v) -> HobbyResumeSelectPhotoButtonClickedListener.onClick()}"
                        android:text="Select Photo"
                        android:textAllCaps="false"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/hobbyResumeUploadButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/hobbyResumeSelectButton"
                        android:onClick="@{(v) -> HobbyResumeUploadPhotoButtonClickedListener.onClick()}"
                        android:text="Upload"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:visibility="@{HobbyResumeVM.upload_btn_visible.get() ? View.VISIBLE : View.INVISIBLE}"/>

                    <Button
                        android:id="@+id/hobbyResumeDoneButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/hobbyResumeUploadButton"
                        android:onClick="@{(v) -> HobbyResumeDoneButtonClickedListener.onClick()}"
                        android:text="Done"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:visibility="@{HobbyResumeVM.done_btn_visible.get() ? View.VISIBLE : View.INVISIBLE}"/>

                    <Button
                        android:id="@+id/hobbyResumeCancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hobbyResumeSelectButton"
                        android:layout_marginLeft="30dp"
                        android:onClick="@{(v) -> HobbyResumeCancelButtonClickedListener.onClick()}"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/hobbyResumeDeleteButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/hobbyResumeSelectButton"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/hobbyResumeCancelButton"
                        android:onClick="@{(v) -> HobbyResumeDeleteButtonClickedListener.onClick()}"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textSize="12dp"/>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</layout>
