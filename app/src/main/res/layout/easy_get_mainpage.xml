<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="BuyingButtonClickListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>

        <variable
            name="RequestingButtonClickListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>

        <variable
            name="SellingButtonClickListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>

        <variable
            name="EasyGetVM"
            type="com.example.wangyulong.campuspass.ViewModel.EasyGetViewModel"/>
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="80dp"
                    android:orientation="vertical">

        <Button
            android:id="@+id/buyingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="90dp"
            android:width="250dp"
            android:background="#ff68bd"
            android:onClick="@{(v) -> BuyingButtonClickListener.onClick()}"
            android:text="Buying"
            android:textAllCaps="false"
            android:textColor="@color/colorPureWhite"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/requestingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="180dp"
            android:width="250dp"
            android:background="#ff68bd"
            android:onClick="@{(v) -> RequestingButtonClickListener.onClick()}"
            android:text="Requesting"
            android:textAllCaps="false"
            android:textColor="@color/colorPureWhite"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/sellingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="270dp"
            android:width="250dp"
            android:background="#ff68bd"
            android:onClick="@{(v) -> SellingButtonClickListener.onClick()}"
            android:text="Selling"
            android:textAllCaps="false"
            android:textColor="@color/colorPureWhite"
            android:textSize="25dp"
            android:textStyle="bold"/>

    </RelativeLayout>
</layout>