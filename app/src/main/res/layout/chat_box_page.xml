<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="ChatBoxCollapseButtonClickedListener"
            type="com.example.wangyulong.campuspass.ClickListener"/>
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5"
        tools:context="com.example.wangyulong.campuspass.Activity.ChatBoxActivity">

        <RelativeLayout
            android:id="@+id/chatBoxScrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:scrollbars="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chatBoxRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="vertical"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chatBoxBackButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/logo_style_button"
                android:onClick="@{(v) -> ChatBoxCollapseButtonClickedListener.onClick()}"
                android:text="Collapse"
                android:textAllCaps="false"
                android:textColor="@color/logoPurple"
                android:textStyle="bold"/>

        </RelativeLayout>


    </LinearLayout>
</layout>